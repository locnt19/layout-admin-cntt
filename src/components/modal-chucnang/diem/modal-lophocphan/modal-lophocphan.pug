section.modal_chucnang__wrapper(data-modal='lophocphan')
  .modal_chucnang__close.mdi.mdi-chevron-left.text-white
  .container-fluid.mt-3
    .row
      .col-12
        h1.text-center.text-white Lớp học phần
      .col-12
        .modal_chucnang__box.border.rounded.p-4.mt-5.bg-white
          .row.justify-content-center.align-items-center
            .col-3
              .form-group
                label Tên lớp học phần
                input.form-control
              .form-group
                label Loại lớp học phần
                select.form-control.modal_chucnang__select2
                  option Lớp bình thường
                  option Lớp học ghép
            .col-3
              .form-group
                label Lớp học
                select.form-control.modal_chucnang__select2
                  option CĐ TH 16 PMC
              .form-group
                label Mã đào tạo
                select.form-control.modal_chucnang__select2
                  option Mã đào tạo
            .col-3
              .form-group
                label Học kì giảng dạy thực tế
                input.form-control(type='number' min='1' value='1')
              .form-group
                label Số lượng SV tối đa
                input.form-control
            .col-auto
              .modal_chucnang__group__button
                button.modal_chucnang__button.btn.btn-outline-primary.px-4.mx-2
                  img.modal_chucnang__button__icon.mb-1(src='img/icons/add.png' alt='image icon')
                  div Thêm
      .col-12
        .modal_chucnang__box.border.rounded.p-4.mt-5.bg-white
          .d-flex.align-items-center.mb-2
            label.mb-0.d-flex.align-items-center
              span.text-nowrap Hiển thị &nbsp;
              select.custom-select.custom-select-sm.form-control
                option 10
                option 25
                option 50
              span.text-nowrap &nbsp; hàng
            label.ml-auto.mb-0.d-flex.align-items-center
              span.text-nowrap Bộ lọc: &nbsp;
              input(placeholder='Nhập từ khoá...').form-control.form-control-sm
          table#danhsach_lophocphan.modal_chucnang__table.table.table-hover
            thead.bg__caothang.text-white
              th(scope='col').text-center #
              th(scope='col') Mã LHP
              th(scope='col') Tên Lớp học phần
              th(scope='col') Loại
              th(scope='col') Mã đào tạo
              th(scope='col') Lớp học
              th(scope='col') HK thực tế
              th(scope='col') SL tối đa
              th(scope='col') Nộp điểm
              th.text-center(scope='col')
                span.modal_chucnang__button__save.mdi.mdi-content-save-outline.mdi-24px
            tbody
              tr
                td.text-center 100
                td 0001
                td
                  input(disabled value='Lớp học phần 1').form-control
                td
                  select(disabled).form-control.modal_chucnang__select2
                    option Loại lớp học phần
                td
                  select(disabled).form-control.modal_chucnang__select2
                    option Mã đào tạo
                td
                  select(disabled).form-control.modal_chucnang__select2
                    option CĐ TH 16 PMC
                td(style='width: 100px')
                  input(disabled value='5').form-control
                td(style='width: 100px')
                  input(disabled value='100').form-control
                td
                  .custom-control.custom-checkbox
                    input#lophocphancheckbox1(disabled type='checkbox').custom-control-input
                    label(for='lophocphancheckbox1').custom-control-label
                td.text-center.text-nowrap
                  span.modal_chucnang__button__edit.mdi.mdi-file-document-edit-outline.mdi-24px
                  span.modal_chucnang__button__delete.ml-2.mdi.mdi-delete-outline.mdi-24px