section.modal_chucnang__wrapper(data-modal='diemsinhvien')
  .modal_chucnang__close.mdi.mdi-chevron-left.text-white
  .container-fluid.mt-3
    .row
      .col-12
        h1.text-center.text-white Điểm sinh viên chính thức
      .col-12
        .modal_chucnang__box.border.rounded.p-4.mt-5.bg-white
          .row.justify-content-center.align-items-center
            .col-3
              .form-group
                label Họ tên
                select.form-control.modal_chucnang__select2
                  option 0306161311 - Nguyễn Thành Lộc
                  option 0306161311 - Nguyễn Trung Hiếu
                  option 0306161311 - Lê Minh Hiếu
              .form-group
                label Tình trạng
                select.form-control
                  option Đang học
                  option Thôi học
                  option Tạm ngưng
                  option Đã tốt nghiệp
            .col-3
              .form-group
                label Khoá
                input.form-control(type='number' min='15' value='15')
              .form-group
                label Bậc
                select.form-control
                  option Cao đẳng
                  option Cao đẳng nghề
            .col-3
              .form-group
                label Lớp
                select.form-control.modal_chucnang__select2
                  option CĐ TH 16C
              .form-group
                label Học kì
                .d-flex
                  .d-flex.align-items-center
                    label.mb-0.mr-2 Từ
                    input.form-control(type='number' min='1' value='1')
                  .ml-2.d-flex.align-items-center
                    label.mb-0.mr-2 đến
                    input.form-control(type='number' min='1' value='1')
            .col-auto
              .modal_chucnang__group__button
                button.modal_chucnang__button.btn.btn-outline-primary.px-4.mx-2
                  img.modal_chucnang__button__icon.mb-1(src='img/icons/search.png' alt='image icon')
                  div Tìm kiếm
      .col-12
        .modal_chucnang__box.border.rounded.p-4.mt-5.bg-white
          .d-flex.align-items-center.mb-2
            label.mb-0.d-flex.align-items-center
              span.text-nowrap Hiển thị &nbsp;
              select.custom-select.custom-select-sm.form-control
                option 10
                option 25
                option 50
              span.text-nowrap &nbsp; hàng
            label.ml-auto.mb-0.d-flex.align-items-center
              span.text-nowrap Bộ lọc: &nbsp;
              input(placeholder='Nhập từ khoá...').form-control.form-control-sm
          table#danhsach_diemsinhvien.modal_chucnang__table.table.table-hover
            thead.bg__caothang.text-white
              th(scope='col') Tên môn học
              th(scope='col') Loại
              th(scope='col') Khoa
              th(scope='col') Học kì
              th(scope='col') DVHT
              th(scope='col') Điểm TK
              th(scope='col') Ghi chú
              th.text-center(scope='col')
                span.modal_chucnang__button__save.mdi.mdi-content-save-outline.mdi-24px
            tbody
              tr
                td Toán rời rạc và lý thuyết đồ thị
                td LT
                td 12
                td 1
                td 3
                td(style='max-width: 100px')
                  input(disabled value='9.5').form-control
                td
                td.text-center
                  span.modal_chucnang__button__edit.mdi.mdi-file-document-edit-outline.mdi-24px
              tr
                td Toán cao cấp
                td LT
                td 12
                td 1
                td 5
                td(style='max-width: 100px')
                  input(disabled value='5.5').form-control
                td Lữ Cao Tiến đã chỉnh sửa
                td.text-center
                  span.modal_chucnang__button__edit.mdi.mdi-file-document-edit-outline.mdi-24px